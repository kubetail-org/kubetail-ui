{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    //"isolatedModules": true,
    "preserveConstEnums": false,
    "noEmit": true,
    "jsx": "react-jsx",

    /* linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* import paths */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },

    /* misc */
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.mdx",
    "src/**/*.stories.tsx"
  ]
}
