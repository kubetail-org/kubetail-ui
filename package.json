{
  "name": "kubetail-ui",
  "version": "0.1.2",
  "private": true,
  "sideEffects": false,
  "description": "Kubetail shared component library",
  "repository": "https://github.com/log-monster/kubetail-ui.git",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugin": {
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./elements": {
      "import": "./dist/elements/index.js",
      "require": "./dist/elements/index.cjs"
    },
    "./elements/DataTable": {
      "import": "./dist/elements/DataTable/index.js",
      "require": "./dist/elements/DataTable/index.cjs"
    },
    "./elements/*": {
      "import": "./dist/elements/*.js",
      "require": "./dist/elements/*.cjs"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint \"./src/**/*.ts{,x}\"",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.73",
    "@types/rollup-plugin-auto-external": "^2.0.5",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "glob": "^10.3.12",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "@heroicons/react": "^2.0.15",
    "@tailwindcss/forms": "^0.5.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-tabs": "^1.0.4",
    "@restart/ui": "^1.6.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.303.0",
    "react-day-picker": "^8.10.0",
    "tailwind-merge": "^2.2.1"
  }
}
