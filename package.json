{
  "name": "kubetail-ui",
  "version": "0.1.1",
  "private": true,
  "sideEffects": false,
  "description": "Kubetail shared component library",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./esm/index.js",
      "types": "./esm/index.d.ts"
    },
    "./plugin": {
      "require": "./plugin.js"
    },
    "./elements": {
      "require": "./elements/index.js",
      "import": "./esm/elements/index.js",
      "types": "./esm/elements/index.d.ts"
    },
    "./elements/DataTable": {
      "require": "./elements/DataTable/index.js",
      "import": "./esm/elements/DataTable/index.js",
      "types": "./esm/elements/DataTable/index.d.ts"
    },
    "./elements/*": {
      "require": "./elements/*.js",
      "import": "./esm/elements/*.js",
      "types": "./esm/elements/*.d.ts"
    }
  },
  "files": [
    "/index.ts",
    "/index.d.ts",
    "/plugin.js",
    "/elements",
    "/esm"
  ],
  "repository": "https://github.com/log-monster/kubetail-ui.git",
  "scripts": {
    "build": "eslint \"./src/**/*.ts{,x}\" --exit-on-fatal-error && rm -rf index.js index.d.ts elements esm && tsc && tsc -b tsconfig-esm.json",
    "lint": "eslint \"./src/**/*.ts{,x}\"",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@heroicons/react": "^2.1.1",
    "@jest/types": "^29.6.3",
    "@storybook/addon-essentials": "^7.6.13",
    "@storybook/addon-interactions": "^7.6.13",
    "@storybook/addon-links": "^7.6.13",
    "@storybook/addon-mdx-gfm": "^7.6.13",
    "@storybook/blocks": "^7.6.13",
    "@storybook/cli": "7.6.7",
    "@storybook/react": "^7.6.13",
    "@storybook/react-webpack5": "^7.6.13",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "prop-types": "^15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "^7.6.13",
    "storybook-dark-mode": "^3.0.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "5.90.1"
  },
  "peerDependencies": {
    "@heroicons/react": "^2.0.15",
    "@tailwindcss/forms": "^0.5.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-tabs": "^1.0.4",
    "@restart/ui": "^1.6.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.303.0",
    "react-day-picker": "^8.10.0",
    "tailwind-merge": "^2.2.1"
  }
}
